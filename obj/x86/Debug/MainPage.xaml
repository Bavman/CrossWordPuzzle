<Page x:ConnectionId='1'
    x:Class="CrossWordPuzzle.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CrossWordPuzzle.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.DataContext>
        <local:MainPageData/>
    </Page.DataContext>

    <Page.Resources>

        <Style x:Key="MyItem" TargetType="GridViewItem">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>


        <DataTemplate x:Key="Cell">

            <Border BorderBrush="Black" BorderThickness="1">
                <TextBox x:Name="LetterCell" Text="{Binding Letter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         FontSize="16" 
                         HorizontalAlignment="Center" VerticalAlignment="Center" 
                         RenderTransformOrigin="0.5,0.5" 
                         Height="32" Width="32" 
                         TextAlignment="Center" 
                         MinWidth="0"
                         MinHeight="0" 
                         Padding="0"/>
            </Border>

        </DataTemplate>

        <DataTemplate x:Key="Cell2">

            <Border BorderBrush="Black" BorderThickness="1">
                <TextBox x:Name="LetterCell" Text="{Binding Letter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         FontSize="16" 
                         HorizontalAlignment="Center" VerticalAlignment="Center" 
                         RenderTransformOrigin="0.5,0.5" 
                         Height="32" Width="32" 
                         TextAlignment="Center" 
                         MinWidth="32"
                         MinHeight="32" />
            </Border>

        </DataTemplate>

        <DataTemplate x:Key="Column">
            <ItemsControl 
                ItemsSource="{Binding Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                ItemTemplate="{StaticResource Cell}"
                >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Background="Blue" UseLayoutRounding="True"
                                    />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </DataTemplate>



    </Page.Resources>



    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid Margin="28,0,-28,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="420"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="420"/>
                <ColumnDefinition Width="12*"/>
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="1" Grid.Row="1" Width="420" Height="420" >


                <ItemsControl x:ConnectionId='9'
                    
                    UseLayoutRounding="False"
                                                                                                                     
                    ItemTemplate="{StaticResource Column}" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    RenderTransformOrigin="0.5,0.5"
                    >

                </ItemsControl>

            </Grid>
            <Button x:ConnectionId='5' x:Name="ButtonPrintList" Content="Print Cross List" Grid.Column="2" HorizontalAlignment="Left" Margin="61,80,0,0" Grid.Row="1" VerticalAlignment="Top"                              />

            <Button x:ConnectionId='6' x:Name="ButtonPrintList2" Content="Print List" Grid.Column="2" HorizontalAlignment="Left" Margin="61,180,0,0" Grid.Row="1" VerticalAlignment="Top"                               />
            <Button x:ConnectionId='7' x:Name="ButtonModifyList2" Content="Modify List" Grid.Column="2" HorizontalAlignment="Left" Margin="61,220,0,0" Grid.Row="1" VerticalAlignment="Top"                                />

            <ListView x:ConnectionId='8' 
                                                                                                                      
                ItemTemplate="{StaticResource Cell}" Grid.Column="2" Margin="199,80,320,235" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <ListView 
                ItemsSource="{Binding MyTestList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                ItemTemplate="{StaticResource Cell}" Grid.Column="2" Margin="325,80,194,235" Grid.Row="1"/>

        </Grid>
    </Grid>

</Page>

