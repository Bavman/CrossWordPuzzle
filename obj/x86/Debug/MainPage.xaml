<Page x:ConnectionId='1'
    x:Class="CrossWordPuzzle.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CrossWordPuzzle.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.DataContext>
        <local:MainPageData/>
    </Page.DataContext>

    <Page.Resources>

        <DataTemplate x:Key="Cell">

            <Border BorderBrush="Black" BorderThickness="0">
                <TextBox x:Name="LetterCell" 
                         Text="{Binding Letter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         Background="{Binding Colour, Mode=OneWay}"
                         IsReadOnly="{Binding ReadOnly, Mode=OneWay}"
                         FontSize="16" 
                         HorizontalAlignment="Center" VerticalAlignment="Center" 
                         RenderTransformOrigin="0.5,0.5" 
                         Height="32" Width="32" 
                         TextAlignment="Center" 
                         MinWidth="0"
                         MinHeight="0" 
                         Padding="0"
                         BorderThickness="1"/>


            </Border>

        </DataTemplate>
        <DataTemplate x:Key="Definition">

            <TextBlock
                        Text="{Binding Phrase, Mode=TwoWay}" 
                        FontSize="14" 
                        HorizontalAlignment="Left" VerticalAlignment="Top" 
                        RenderTransformOrigin="0.5,0.5" 
                        Width="350" 
                        TextAlignment="Left"
                        TextWrapping="Wrap"
                        MinWidth="0"
                        MinHeight="0" 
                        Padding="0"
                        
                        />

        </DataTemplate>

        <DataTemplate x:Key="Column">
            <ItemsControl 
                ItemsSource="{Binding Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                ItemTemplate="{StaticResource Cell}"
                >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Background="#78a5ed" UseLayoutRounding="True"
                                    />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </DataTemplate>



    </Page.Resources>


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid Margin="28,0,-28,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="420"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="420"/>
                <ColumnDefinition Width="12*"/>
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="1" Grid.Row="1" Width="420" Height="420" >

                <ItemsControl x:ConnectionId='7'
                    
                    UseLayoutRounding="False"
                                                                                                                            
                    ItemTemplate="{StaticResource Column}" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    RenderTransformOrigin="0.5,0.5"
                    >

                </ItemsControl>


            </Grid>

            <ItemsControl x:ConnectionId='5'
                Grid.Column="2" Grid.Row="1"  
                Width="350"
                                                                                   HorizontalAlignment="Left" Margin="10,26,0,124"
                ItemTemplate="{StaticResource Definition}" Grid.RowSpan="2"
                />
            <Button x:ConnectionId='6' x:Name="ButtonPrintList" Content="Print Cross List" Grid.Column="2" HorizontalAlignment="Left" Margin="380,4,0,0" Grid.Row="1" VerticalAlignment="Top"                              />

        </Grid>
    </Grid>

</Page>

